{
    "extends": "airbnb",
    "env": {
        "jasmine": true
    },   
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "parserOptions"   : {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "globalReturn": true,
            "impliedStrict": false
        }
    },
       "rules": {
        "indent": [2, 4, { // 4 spaces indentation
            "SwitchCase": 1,
            "VariableDeclarator": 2
        }],
        "comma-dangle": [2, "never"], // No trailing commas
        "quote-props": [0, "consistent-as-needed", { // Quotes around object prop. only if needed
            "keywords": false
        }],
        "no-unused-expressions": [2, {
            "allowShortCircuit": true, // Allow "a && a();"
            "allowTernary": true // Allow "a ? b() : c();"
        }],
        "func-names": 0,
        "linebreak-style": 0,
        "max-len": [1, 200, 4], // max length of a line = 200 characters
        "no-trailing-spaces": 0,
        "no-use-before-define": 0,
        "padded-blocks": [1, "never"], // Padding around blocks
        "quotes": 0,
        "jsx-a11y/href-no-hash": "off"
    }
}